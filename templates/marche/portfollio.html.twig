{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    <h1>Portfolio</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Stock name</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Purchase Date</th>

        </tr>
        </thead>
        <tbody>
        {% for m in marche %}
            <tr>
                <td>{{ m.stock }}</td>
                <td>{{ m.quantite }}</td>
                <td>{{ m.total }}</td>
                <td>{{ m.dateAchat }}</td>
                <td>
                    <a class="btn btn-tertiary"href="{{ path('app_marche_show', {'id': m.id}) }}">show</a>
                    <a class="btn btn-tertiary" href="{{ path('app_entreprise_edit', {'id': m.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
