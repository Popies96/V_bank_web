<style>
    body {
        background-color: #212D37;
        .button-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }/* Use any shade of gray you prefer */
    }
    h1{
        color: white;
        margin-top: 15px;
    }
</style>
<h1 class="card-header text-center ">Create your account</h1>
<div class="container my-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">

                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-fields">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.industrie, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.type, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.solde, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.adresse, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.tel, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.pays, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.adresseMail, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.motDePasse, {'attr': {'class': 'form-control mb-3'}}) }}
                    </div>
                    <div class="text-center button-container">
                        <button type="submit" class="btn btn-primary btn-block text-black-50">{{ button_label|default('save') }}</button>
                        <a href="{{ path('app_entreprise_index') }}" class="btn btn-secondary btn-block mx-3">Back to List</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .form-fields .form-control {
        margin-bottom: 10px; /* Adjust the value as needed */
    }
    .card {
        margin-top: 5vh;
    }

</style>