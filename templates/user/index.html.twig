{% extends 'admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div>
    <h1>List of Users</h1>
        <div class="glass-container">
    <table class="table">
        <thead>
            <tr>
                <th>IdUser</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.idUser }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'idUser': user.idUser}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
</div>
    <div>

        <h1>List of Accounts</h1>

        <table class="table">
            <thead>
            <tr>
                <th>IdCompte</th>
                <th>Solde</th>
                <th>DateDeCreation</th>
                <th>TypeCompte</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for compte in comptes %}
                <tr>
                    <td>{{ compte.idCompte }}</td>
                    <td>{{ compte.solde }}</td>
                    <td>{{ compte.dateDeCreation ? compte.dateDeCreation|date('Y-m-d') : '' }}</td>
                    <td>{{ compte.typeCompte }}</td>
                    <td>{{ compte.etat }}</td>
                    <td>
                        <a href="{{ path('app_compte_show', {'idCompte': compte.idCompte}) }}">show</a>
                        <a href="{{ path('app_compte_edit', {'idCompte': compte.idCompte}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

      <!--  <a href="">Create new</a>-->
    </div>
{% endblock %}
